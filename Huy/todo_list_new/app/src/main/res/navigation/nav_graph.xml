<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.mrrobot.mvvm_todolist.ui.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_inputFragment"
            app:destination="@id/inputFragment" />
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputFragment"
        android:name="com.mrrobot.mvvm_todolist.ui.input.InputFragment"
        android:label="InputFragment" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.mrrobot.mvvm_todolist.ui.detail.DetailFragment"
        android:label="DetailFragment" />
</navigation>